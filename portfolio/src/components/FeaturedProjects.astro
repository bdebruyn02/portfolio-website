---
// Featured Projects section
const projects = [
  {
    name: "Project Alpha",
    desc: "A web application for managing tasks and projects, built with React and Node.js.",
    repo: "#",
    demo: "#",
    img: "/project-alpha.png"
  },
  {
    name: "Project Beta",
    desc: "An e-commerce platform with a focus on user experience, developed using Python and Django.",
    repo: "#",
    demo: "#",
    img: "/project-beta.png"
  }
];
---
<section class="py-6">
  <h3 class="text-lg font-semibold mb-2">Featured Projects</h3>
  <div class="space-y-6">
    {projects.map(project => (
      <div class="flex flex-col md:flex-row md:items-center gap-4 bg-gray-800 rounded-lg p-4">
        <div class="flex-1">
          <div class="font-medium">{project.name}</div>
          <div class="text-xs text-gray-400 mb-2">{project.desc} [<a href={project.repo} class="underline">Repository Link</a>] [<a href={project.demo} class="underline">Live Demo Link</a>]</div>
          <button class="bg-gray-700 text-gray-200 px-3 py-1 rounded-full text-xs">View Project</button>
        </div>
        <img src={project.img} alt={project.name} class="w-48 h-28 object-cover rounded-md bg-gray-700" />
      </div>
    ))}
  </div>
</section>
