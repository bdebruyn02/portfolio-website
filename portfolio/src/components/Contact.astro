// Contact section
---
<section class="py-6">
  <h3 class="text-lg font-semibold mb-2">Contact</h3>
  <form class="space-y-4 max-w-md">
    <div>
      <label class="block text-xs mb-1">Email</label>
      <input type="email" class="w-full bg-gray-800 text-gray-200 rounded px-3 py-2" placeholder="Your Email" />
    </div>
    <div>
      <label class="block text-xs mb-1">Message</label>
      <textarea class="w-full bg-gray-800 text-gray-200 rounded px-3 py-2" rows="4" placeholder="Your Message"></textarea>
    </div>
    <button type="submit" class="bg-gray-200 text-gray-900 px-6 py-2 rounded-full float-right">Send</button>
  </form>
  <div class="mt-8 text-center text-xs text-gray-400">
